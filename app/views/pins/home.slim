.modal.fade#myModal
  .modal-dialog
    .modal-content
      .modal-header
        button type="button" class="close" data-dismiss="modal" aria-label="Close"
          span aria-hidden="true"
        h4.modal-title New Pin
      .modal-body
        = render 'form'
        button.btnbtn-default type="button"  data-dismiss="modal" Close


ul#url
  p#note


javascript:

  $(document).ready(function(){
    $(".modal-toggle").click(function(){
      $('#myModal').modal('toggle');
    });

    var $url = $('#url');
    var $note = $('#note')
    var $url_field = $('#url-field');
    var $note_field = $('#note-field');
    $.ajax({
      type: 'GET',
      url: 'pins',
      success: function(data) {
        $.each(data, function(i, data){
          $url.append('<li><h1>url: '+ data.url +'</h1></li>');
          $url.append('<li><p>note: '+data.note+'</p></li>')
        });
      },
      error: function(){
      alert("Error loading pins")
      }
    });

    $('#add-pin').on('click', function(){
      var pin = {
        url: $url.val(),
        note: $note.val(),
        };
      $.ajax({
        type: 'POST',
        url: 'pins',
        data: pin,
        success: function(newPin) {
          $url.append('<li><h1> url: '+ newPin.url +'</h1></li>')
          }
        });
    });
  });
