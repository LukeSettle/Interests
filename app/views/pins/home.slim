.modal.fade#myModal
  .modal-dialog
    .modal-content
      .modal-header
        button type="button" class="close" data-dismiss="modal" aria-label="Close"
          span aria-hidden="true"
        h4.modal-title New Pin
      .modal-body
        = render 'form'
        button.btnbtn-default type="button"  data-dismiss="modal" Close


ul#url
  p#note


javascript:

  $(function(){
    var $url = $('#url');
    var $note = $('#note')
    var $pin_url = $('#pin_url');
    var $pin_note = $('#pin_note');

    $(".modal-toggle").click(function(){
      $('#myModal').modal('toggle');
      $('#pin_url').val('');
      $('#pin_note').val('');
    });

    $.ajax({
      type: 'GET',
      url: 'pins',
      dataType: 'JSON',
      success: function(data) {
        $.each(data, function(i, data){
          $url.append('<li><h1><a href='+ data.url + '>'+ data.url +'</a></h1></li>');
          $url.append('<li><p>note: '+data.note+'</p></li>')
        })
      },
      error: function(){
      alert("Error loading pins")
      }
    });

    $('#add-pin').on('click', function(){
      $('#myModal').modal('hide')
      $.ajax({
        type: 'POST',
        url: 'pins',
        data: JSON.stringify({
          url: $pin_url.val(),
          note: $pin_note.val(),
          }),
        success: function(newPin) {
          console.log(newPin.url)
          $url.append('<li><h1><a href='+ newPin.url + '>'+ newPin.url +'</a></h1></li>');
          $url.append('<li><p>note: '+ newPin.note +'</p></li>');
          },
        error: function(e) {
          console.log(e);
        },
        dataType: "json",
        contentType: "application/json"
      });
    });
  });
